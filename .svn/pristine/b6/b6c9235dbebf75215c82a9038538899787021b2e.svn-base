page{
    overflow-x: hidden;
    word-break: break-all; 
}
.footer_img{
    width: 30px;
    height: 30px;
    margin-left: 20px;
}
.footer{
  position: fixed;
  bottom: 0px;
  width: 100%;
  border-top: 1px solid white;
  background-color: white;
  padding-bottom: 10px;
  z-index: 9999;
}
.footer_2{
    width: 100%;
    padding-top: 2px;
    padding-bottom: 2px;
    display: flex;
}
.footer_text{
    background-color: #E6E6E6;
    height: 30px;
    margin:1px 2%;
    border-radius: 5px;
    flex: 1;
    padding:0 5px;
}
.footer_bth{
    text-align: center;
    background-color: #1296db;
    color: white;
    width: 18%;
    float: right;
    height: 30px;
    line-height: 30px;
    margin-right: 2%;
    font-size:14px;

}
.contect_left{
    float: left;
}
.contect_right{
    padding: 5px;
    background-color: #337AB0;
    color: #f5f5f5;
    font-size: 14px;
    margin-top: 2px;
    opacity: 0.8;
    max-width: 84%;
    border-radius:5px;
}
.contect_img{
    width: 32px;
    height: 32px;
}
.contect_time{
    padding-left: 8px;
}
.img{
    width: 100px;
    height: 100px;
}
.list{
    margin-top:20px;
    padding-bottom: 115px;
    height: auto;
    border-radius: 8px;
    padding-top: 50px;
}
.text_class{
    text-align: center;
    padding-top: 70%;
}
.menu{
    padding: 4px 0;
}
.video_play{
    min-width: 250px;
    width: 100%;
}
.voice{
    min-width: 256px;
    width: 84%;
}
.img_middle{
    width: 50px;
    height: 50px;
}
.voice_all{
    width: 24%;
    height: 50px;
    padding-left: 5px;
    padding-top: 5px;
    padding-bottom: 5px;
}
.mask{
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.9;
    text-align: center;
}
.bigimage{
    width:90%;
    padding-top: 32%;
}
.tip{
    padding: 0 8px;
    padding-top: 20px;
}
.address_main{
    padding:8px 15px;
    background-color: #ffffff;
    display: flex;
    position: fixed;
    top:0;
    z-index: 100;
    width:100%;
    align-items:center;
}
.img_small{
    width:35px;
    height: 35px;
    
}
.refresh{
    margin-right:20px 
}
.address{
    padding-left: 5px;
    width: 60%;
    font-size: 14px;
    flex: 1;
    
}
