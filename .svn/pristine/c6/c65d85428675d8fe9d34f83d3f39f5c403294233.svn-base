.user {
  position: relative;
  width: 100%;
  height: 400rpx;
  text-align: center;
  background-color: #fff;
}
.user_image {
  position: absolute;
  top: 130rpx;
  left: 301rpx;
  width: 145rpx;
  height: 145rpx;
  border: 1rpx solid #eee;
  border-radius: 50%;
}
.user_name {
  position: absolute;
  font-size: 26rpx;
  color: #333;
  font-family: 'PingFang-SC-Regular';
  bottom: 0rpx;
  width:100%;
  height: 125rpx;
  line-height: 125rpx;
}
.auth {
  position: relative;
  height: 120rpx;
  font-size: 30rpx;
  color: #333;
  font-family: 'PingFang-SC-Medium';
  padding: 0 20rpx;
  line-height: 120rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.icon_next {
  position: absolute;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  top: 40rpx;
}
.n_auth_icon {
  position: absolute;
  bottom: 125rpx;
  right: 210rpx;
  font-size: 24rpx;
  color: #fff;
  font-family: 'PingFang-SC-Regular';
  line-height: 36rpx;
  height: 36rpx;
  width: 100rpx;
  background-color: #a50000;
  border-radius: 40rpx;
}
.auth_icon {
  position: absolute;
  bottom: 125rpx;
  right: 210rpx;
  font-size: 24rpx;
  color: #fff;
  font-family: 'PingFang-SC-Regular';
  line-height: 36rpx;
  height: 36rpx;
  width: 100rpx;
  background-color: #008B45;
  border-radius: 40rpx;
}
.auth_text {
  position: absolute;
  right:60rpx;
  font-size: 28rpx;
  color: #b7b7b7;
  font-family: 'PingFang-SC-Regular';
}
.copyright {
  position:fixed;
  bottom:40rpx;
  width:100%;
  text-align: center;
  font-size: 24rpx;
  color: #b7b7b7;
  font-family: 'PingFang-SC-Regular';
}