.header {
  position: relative;
  width: 100%;
  height: 400rpx;
}
.swiper {
  width: 100%;
  height: 100%;
  text-align: center;
}
.swiper_image {
  width: 100%;
  height: 100%;
}
.content {
  position: relative;
  width: 100%;
}
.item {
  position: relative;
  margin-top: 20rpx;
  background-color: #fff;
  clear: both;
}
.top {
  position: relative;
  height: 100rpx;
  padding: 0 20rpx;
}
.user_icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  margin: 20rpx 0;
  border: 1rpx solid #eee;
}
.top_content {
  float: right;
  width: 630rpx;
  height: 100rpx;
}
.phone {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #333;
  font-family: 'PingFang-SC-Regular';
}
.top_time {
  display: flex;
  align-items: flex-end;
}
.icon_time {
  width: 24rpx;
  height: 24rpx;
  /* margin-top: 10rpx; */
   margin-bottom: 6rpx; 
}
.time {
  /* float: right; */
  margin-left:10rpx;
  /* width: 600rpx; */
  text-align: left;
  /* margin-top: 10rpx; */
  font-size: 22rpx;
  color: #888;
  font-family: 'PingFang-SC-Medium';
}
.middle {
  padding: 0 20rpx;
}
.m_image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}
.m_content {
  font-size: 26rpx;
  color: #333;
  font-family: 'PingFang-SC-Regular';
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  margin: 20rpx 0;
}
.bottom {
  position: relative;
  height: 80rpx;
  border-top: 1rpx solid #888;
  border-bottom: 1rpx solid #888;
  padding: 0 20rpx;
}
.icon_address {
  width: 30rpx;
  height: 50rpx;
  margin: 15rpx 0;
}
.b_address {
  position: absolute;
  top: 27rpx;
  margin-left: 8rpx;
  font-size: 26rpx;
  color: #333;
  font-family: 'PingFang-SC-Regular';
}
.b_type{
  color:#888888;
}
.b_text {
  position: absolute;
  top: 28rpx;
  right: 40rpx;
  font-size: 24rpx;
  color: #888;
  font-family: 'PingFang-SC-Regular';
}
.buttom {
  position: relative;
  height: 70rpx;
  font-size: 26rpx;
  color: #b3b3b3;
  font-family: 'PingFang-SC-Regular';
  line-height: 70rpx;
  text-align: center;
}
.icon_camera {
  position: absolute;
  top: 200rpx;
  left: 287rpx;
  width: 176rpx;
  height: 104rpx;
}
.p_text {
  position: absolute;
  font-size: 28rpx;
  color: #ccc;
  font-family: 'PingFang-SC-Regular';
  text-align: center;
  top:344rpx;
  width:100%;
}
.hide {
  display: none;
}